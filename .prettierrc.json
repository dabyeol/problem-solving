{
  "arrowParens": "avoid",
  "bracketSameLine": false,
  "bracketSpacing": true,
  "endOfLine": "lf",
  "jsxSingleQuote": false,
  "printWidth": 80,
  "proseWrap": "preserve",
  "quoteProps": "as-needed",
  "semi": true,
  "singleQuote": true,
  "tabWidth": 2,
  "trailingComma": "es5",

  "plugins": ["prettier-plugin-sql-cst"],
  "overrides": [
    {
      "files": "*.sql",
      "options": {
        "parser": "mysql"
      }
    }
  ]
}
